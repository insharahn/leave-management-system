        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
  if (current.u_leave_type == 'pl') {
    var startDate = new GlideDateTime(current.u_start_date);
    var today = new GlideDateTime();
    var minDate = new GlideDateTime(today);
    minDate.addDays(30);

    if (startDate.before(minDate)) {
      gs.addErrorMessage('Permanent Leave must start at least 30 days from today.');
      current.setAbortAction(true);  // stop save
    }
  }
})(current, previous);
]]></script>
