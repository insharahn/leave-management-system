        <script><![CDATA[(function executeRule(current, previous) {
	var days = gs.dateDiff(current.start_date, current.end_date, true) + 1;
    var leavesLeft = new GlideRecord('x_1804195_leave_ma_track_leaves');
    leavesLeft.addQuery('user', current.requested_by);
    leavesLeft.query();
    if (leavesLeft.next()) 
	{
        if (current.leave_type == 'sl' && leavesLeft.sick_leaves < days) 
		{
            gs.addErrorMessage('Not enough sick leaves left.');
            current.setAbortAction(true);
        } 
		else if (current.leave_type == 'pl' && leavesLeft.planned_leaves < days) 
		{
            gs.addErrorMessage('Not enough planned leaves left.');
            current.setAbortAction(true);
        }
   }
})(current, previous);
]]></script>
